<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
  
    <parent>
        <groupId>org.hudsonci.plugins</groupId>
        <artifactId>deploy-plugin-parent</artifactId>
        <version>3.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>deploy-plugin-library</artifactId>
    <packaging>jar</packaging>
    <name>Deploy Plugin Shaded Library</name>
    <description>Plugin to deploy ear/war build artifacts to remote Application Servers. Supported Servers are JBoss 3/4/6, Glassfish 2/3, Tomcat 5/6/7.</description>
    <url>http://wiki.hudson-ci.org/display/HUDSON/Deploy+Plugin</url>
    
    <properties>
        <cargo.version>1.1.2</cargo.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.codehaus.cargo</groupId>
            <artifactId>cargo-core-api-generic</artifactId>
            <version>${cargo.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>dom4j</groupId>
                    <artifactId>dom4j</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>jaxen</groupId>
                    <artifactId>jaxen</artifactId>
                </exclusion>
                <exclusion>
                    <artifactId>commons-logging</artifactId>
                    <groupId>commons-logging</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <artifactId>cargo-core-api-util</artifactId>
            <groupId>org.codehaus.cargo</groupId>
            <type>jar</type>
            <version>1.1.2</version>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <relocations>
                                <relocation>
                                    <pattern>org.apache.tools.ant</pattern>
                                    <shadedPattern>org.hudson.apache.tools.ant</shadedPattern>
                                </relocation>
                            </relocations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
     
        </plugins>
    </build>

</project>
